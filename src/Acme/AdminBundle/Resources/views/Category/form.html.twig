{% extends "AcmeAdminBundle::layout.html.twig" %}

{% block body %}
    <div class="page-header">
        <h1>Category <small>{{ action }}</small></h1>
    </div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group{% if form.name.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block">
                    {{ form_errors(form.name) }}
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                {{ form_row(form.send, {'attr': {'class': 'btn btn-primary btn-block' }}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
