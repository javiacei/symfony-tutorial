<!DOCTYPE html>
<html>
    <head>
        <title>Symfony Tutorial</title>
        <link rel="stylesheet" href="{{ asset('bundles/acmeadmin/css/bootstrap.css') }}"/>
    </head>

    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Symfony Tutorial - Admin</a>
                </div>

                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> {{app.user.username}} <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('security_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div class="jumbotron"></div>

        {% include "AcmePortfolioBundle::flash-messages.html.twig" %}

        <div class="container-fluid">

            <div class="row">

                <!-- Left panel -->
                <div class="col-md-2">
                    
                    <!-- Post -->
                    <div class="panel panel-primary">
                        <div class="panel-heading">Post</div>
                        <div class="panel-body">
                            <ul>
                                <li><a href="{{ path('admin_posts_list') }}">List</a></li>
                                <li><a href="{{ path('admin_posts_create') }}">Create</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="panel panel-warning">
                        <div class="panel-heading">Category</div>
                        <div class="panel-body">
                            <ul>
                                <li><a href="{{ path('admin_category_list') }}">List</a></li>
                                <li><a href="{{ path('admin_category_create') }}">Create</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Principal panel -->
                <div class="col-md-10">
                    {% block body %} {% endblock %}
                </div>
            </div>
        </div>

        <script type="text/javascript" src="{{ asset('bundles/acmeadmin/js/jquery-2.1.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/acmeadmin/js/bootstrap.min.js') }}"></script>

        {% block javascripts '' %}

    </body>
</html>
