<!DOCTYPE html>
<html>
    <head>
        <title>Symfony Tutorial</title>
        <link rel="stylesheet" href="{{ asset('bundles/acmeportfolio/css/bootstrap.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/acmeportfolio/css/main.css') }}"/>

        <script type="text/javascript" src="{{ asset('bundles/acmeportfolio/js/jquery-2.1.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/acmeportfolio/js/bootstrap.min.js') }}"></script>
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('portfolio_home_index') }}">Home</a></li>
                    <li><a href="{{ path('portfolio_about_index') }}">About</a></li>
                    <li><a href="{{ path('portfolio_blog_index') }}">Blog</a></li>
                    <li><a href="{{ path('portfolio_contact_index') }}">Contact</a></li>
                </ul>
            </div>
        </nav>
        <div class="jumbotron">
            {% if section is defined %}
                <h1>{{ section }}</h1>
            {% endif %}
        </div>
        {% if not app.session.get('cookies_accepted') %}
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="alert alert-success alert-dismissable">
                        <a href="{{ path('portfolio_home_accept_cookies') }}" class="close" data-dismiss="alert" aria-hidden="true">
                            &times;
                        </a>
                        By removing this alert you are accepting the following Cookie Policy
                    </div>
                </div>
            </div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>

                        {{ flashMessage }}
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="container-fluid">
            {% block body %}

            {% endblock %}
        </div>
        {% block javascripts '' %}
    </body>
</html>