{% extends "AcmePortfolioBundle::layout.html.twig" %}

{% if section is defined %}
    {% set body_class = 'body-' ~ section|lower %}
{% endif %}

{% block body %}
    <div class="row">
        {% for category in categories %}
            <div class="col-xs-3">
                <a href="{{ path('portfolio_blog_list', {'categoryName': category.name}) }}"><h2>{{ category.name }}</h2></a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
