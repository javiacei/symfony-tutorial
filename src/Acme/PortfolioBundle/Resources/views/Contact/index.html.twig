{% extends "AcmePortfolioBundle::layout.html.twig" %}

{% if section is defined %}
    {% set body_class = 'body-' ~ section|lower %}
{% endif %}

{% block body %}
    <h4>If you want to hire me, fill the following form:</h4>
    <hr/>
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'true' }}) }}
        {{ form_errors(form) }}

        <div class="form-group{% if form.name.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.name, 'Your name', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-8">
                {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.name) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.email.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.email, 'Your email', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-6">
                {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.email) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.company.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.company, 'Your email', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-4">
                {{ form_widget(form.company, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.company) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.salary.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.salary, 'Your salary', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-4">
                {{ form_widget(form.salary) }}
                <span class="help-block">
                    {{ form_errors(form.salary) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.currency.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.currency, 'Paying in', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-4">
                {{ form_widget(form.currency, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.currency) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.contractDate.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.contractDate, 'Contract date', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-4">
                {{ form_widget(form.contractDate, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.contractDate) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.country.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.country, 'You are from', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-4">
                {{ form_widget(form.country, {'attr': {'class': 'form-control' }}) }}
                <span class="help-block">
                    {{ form_errors(form.country) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.message.vars.errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form.message, 'You message', {'label_attr': {'class': 'control-label col-sm-2' }}) }}
            <div class="col-sm-6">
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 5 }}) }}
                <span class="help-block">
                    {{ form_errors(form.message) }}
                </span>
            </div>
        </div>

        <div class="form-group{% if form.terms.vars.errors|length > 0 %} has-error{% endif %}">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    {{ form_label(form.terms, 'Accept terms of service') }}
                    {{ form_widget(form.terms) }}
                    <span class="help-block">
                        {{ form_errors(form.terms) }}
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                {{ form_row(form.send, {'attr': {'class': 'btn btn-primary btn-block' }}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}